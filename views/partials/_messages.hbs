{{#if errors}}
    {{!-- {{#each errors}}
        {{toast M.toast msg red}}
    {{/each}} --}}
    <input type="hidden" name="errors" id="errors" value="{{errors}}">
{{/if}}

{{#if success_msg}}
    <input type="hidden" name="success_msg" id="success_msg" value="{{success_msg}}">
{{/if}}

{{#if error_msg}}
    <input type="hidden" name="error_msg" id="error_msg" value="{{error_msg}}">
{{/if}}

{{#if error}}
    <input type="hidden" name="error" id="error" value="{{error}}">
{{/if}}